---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(43, 62, 91);
    --aw-color-secondary: rgb(45, 63, 90);
    --aw-color-accent: rgb(109, 40, 217);

    --aw-color-text-heading: rgb(0, 0, 0);
    --aw-color-text-default: rgb(16, 16, 16);
    --aw-color-text-muted: rgb(16, 16, 16 / 66%);
    --aw-color-bg-page: rgb(255, 255, 255);

    --aw-color-bg-page-dark: rgb(0, 0, 0);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: hsl(120, 30%, 40%);
    --aw-color-secondary: hsl(120, 39%, 47%);
    --aw-color-accent: hsl(120, 52%, 51%);

    --aw-color-text-heading: rgb(232, 232, 232);
    --aw-color-text-default: rgb(205, 205, 205);
    --aw-color-text-muted: rgb(191, 191, 191);
    --aw-color-bg-page: rgb(20, 20, 20);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
